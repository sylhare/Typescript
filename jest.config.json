{
    "preset": "ts-jest",
    "testRegex": "\\.(test|e2e)\\.ts$",
    "moduleFileExtensions": ["ts", "js", "json"],
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.ts", "!src/index.ts"
    ],
    "setupFilesAfterEnv": [
        "jest-extended/all"
    ],
    "coveragePathIgnorePatterns": [],
    "coverageReporters": ["text", "text-summary", "lcov"],
    "coverageThreshold": {
        "global": {
            "branches": 85,
            "lines": 85
        }
    },
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "watchPathIgnorePatterns": [".idea"]
}
