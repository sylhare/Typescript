{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testTimeout": 10000,
  "testRegex": "\\.(test|e2e)\\.ts$",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test"
  ],
  "coverageReporters": [
    "text",
    "text-summary",
    "lcov"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "js",
    "ts",
    "json"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/"
  ],
  "watchPathIgnorePatterns": [
    ".idea"
  ]
}
