{
  "name": "typescript",
  "version": "0.0.0",
  "description": "Experience with Typescript",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix src --ext=.ts",
    "test": "jest",
    "test:watch": "jest --verbose --detectOpenHandles",
    "test:cov": "jest --coverage",
    "start": "npm run build:dist && node 'dist/index.js'",
    "copy-files": "mkdir dist/resources || true && cp -R src/resources/** dist/resources/",
    "start:dev": "npm run build:dev",
    "build": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "build:dist": "tsc && npm run copy-files"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-sylhare:sylhare/Typescript.git"
  },
  "keywords": [
    "Typescript",
    "fun"
  ],
  "author": "sylhare",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2"
  }
}
